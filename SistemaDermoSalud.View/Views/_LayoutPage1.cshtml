    <div class="main-menu menu-fixed menu-dark menu-accordion menu-shadow" data-scroll-to-active="true">
        <div class="main-menu-content">
            <ul class="navigation navigation-main" id="main-menu-navigation" data-menu="menu-navigation">
                @{
                    foreach (var item in ((ObjSesionDTO)Session["Config"]).SessionListaMenu)
                    {
                        if (item.Nivel == 0)
                        {
                            @Html.Raw("<li class='nav-item'>");
                            @Html.Raw("<a href='javascript:;'><i class='" + item.Icono + "'></i><span class='menu-title'>" + item.Descripcion + "</span><span class='arrow'></span></a>");
                            @Html.Raw("<ul class='menu-content'>");
                            foreach (var item2 in ((ObjSesionDTO)Session["Config"]).SessionListaMenu)
                            {
                                if (item2.Nivel == 1 && item2.idMenuPadre == item.idMenuPadre)
                                {
                                    if (item2.Controller != "" && item2.Action != "")
                                    {
                                        @Html.Raw("<li><a class='menu-item' href='javascript:void(0)' onclick=\"AbrirMenu('" + item2.Controller + "', '" + item2.Action + "')\">" + item2.Descripcion + "</a></li>");
                                    }
                                    else
                                    {
                                        @Html.Raw("<li><a href='jasvascript:;'><span class='title'>" + item2.Descripcion + "</span><span class='arrow'></span></a>");
                                        @Html.Raw("<ul class='sub-menu'>");
                                        foreach (var item3 in ((ObjSesionDTO)Session["Config"]).SessionListaMenu)
                                        {
                                            if (item3.Nivel == 2 && item3.idMenuPadre == item2.idMenu)
                                            {
                                                if (item3.Controller != "" && item3.Action != "")
                                                {
                                                    @Html.Raw("<li><a href='javascript:void(0)' onclick=\"AbrirMenu('" + item3.Controller + "', '" + item3.Action + "')\">" + item3.Descripcion + "</a> </li>");
                                                }
                                            }
                                        }
                                        @Html.Raw("</ul></li>");
                                    }
                                }
                            }
                            @Html.Raw("</ul></li>");
                        }
                    } }
            </ul>
        </div>
    </div>
