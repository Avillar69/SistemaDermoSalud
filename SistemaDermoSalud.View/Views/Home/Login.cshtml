

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Title = "Login";
}

@section styles{
    <!-- Sweet Alert css-->
    <link href="~/assets/libs/sweetalert2/sweetalert2.min.css" rel="stylesheet" type="text/css" />

    <style>
        .auth-one-bg .bg-overlay {
            background: linear-gradient(to right,#dee2e9,#ededee);
            opacity: .9;
        }
    </style>
}

<div class="row">
    <div class="col-lg-12">
        <div class="text-center text-white-50">
            <div>
                <a href="index.php" class="d-inline-block auth-logo">
                    <img src="~/assets/images/logo-gca.png" alt="" height="100">
                </a>
            </div>

        </div>
    </div>
</div>
<!-- end row -->

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6 col-xl-5">
        <div class="card mt-4" style="margin-bottom: 0px;">
            <div class="card-body p-4">
                <div class="text-center mt-2">
                    <h5 class="text-primary">Bienvenido !</h5>
                    <p class="text-muted">Ingresa tus datos para iniciar sesión</p>
                </div>
                <div class="p-2">
                    <form action="#">
                        <div class="mb-3">
                            <label for="username" class="form-label">Usuario</label>
                            <input type="text" class="form-control" id="txtUsuario" placeholder="Usuario">
                        </div>
                        <div class="mb-3">
                            <div class="float-end">
                                <a href="/Account/RecuperarPassword" class="text-muted fw-semibold text-primary text-decoration-underline"><font style="vertical-align: inherit;">¿Olvidaste la contraseña?</font></a>
                            </div>
                            <label class="form-label" for="password-input">Contraseña</label>
                            <div class="position-relative auth-pass-inputgroup mb-3">
                                <input type="password" class="form-control pe-5 password-input" placeholder="Contraseña" id="txtPassword">
                                <button class="btn btn-link position-absolute end-0 top-0 text-decoration-none text-muted password-addon" type="button" id="password-addon"><i class="ri-eye-fill align-middle"></i></button>
                            </div>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="auth-remember-check">
                            <label class="form-check-label" for="auth-remember-check">Recuerdame</label>
                        </div>
                        <div class="mt-4">
                            @* <a href="index.php" class="btn btn-success w-100" type="submit">Iniciar sesión</a> *@
                            <button id="BtnIngresando" style="display:none" type="button" class="btn btn-success w-100"><span class="fa fa-spinner fa-spin"></span> Ingresando...</button>
                            <button id="btnLogin" type="button" class="btn btn-success w-100">INGRESAR</button>
                        </div>
                    </form>
                </div>
            </div>
            <!-- end card body -->
        </div>
        <!-- end card -->
    </div>
</div>

@section Scripts {
    <script src="~/assets/libs/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/Scripts/app.js"></script>
    <script src="~/Scripts/login.js"></script>
}